<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.loops.magic.MainActivity">

    <include
        android:id="@+id/inc_id"
        layout="@layout/usb_rec_item_head" />

    <ListView
        android:id="@+id/list_view"
        android:layout_below="@+id/inc_id"
        android:layout_above="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/usb_rec_item"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@drawable/list_blue_bar"
        android:divider="@null"
        android:dividerHeight="15dp"
        android:listSelector="#00000000"
        android:fadingEdge="none"/>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/inc_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="刷新"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="执行"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/btn_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="获取状态"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_print_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="A打印机打印"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_print_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="B打印机打印"
            android:textSize="25sp"/>
    </LinearLayout>
</RelativeLayout>